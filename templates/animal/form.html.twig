{% extends 'base.html.twig' %}

 {% block stylesheets %}
    <style>
        .col-sm-2{
            min-width: 200px;
        }
        .align-items-center{
            max-width: 1026px;
        }
    </style>
 {% endblock %}

{% block body %}
<h1>{{ titulo }}</h1>
    <div class="card border-dark" style="width: fit-content">
        <div class="card-body text-dark">
       {{ form(form) }}
        </div>
    </div>
    <script>

        const elemento = document.getElementById('animal_nascimento')

        elemento.flatpickr({
            enableTime: false,
            altInput: true,
            dateFormat: "Y-m-d",
            altFormat: "d/m/Y",
            locale: "pt",
            theme: "dark",
            maxDate: new Date()
        })

    </script>

{% endblock %}